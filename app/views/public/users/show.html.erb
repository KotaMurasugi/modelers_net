<hi>ユーザープロフィール</hi>
<div>
  <h3><%= @user.nickname %></h3>

  <%= image_tag @user.get_profile_image(100,100) %>

  <p>自己紹介</p>

  <%= @user.introduction %>

  <% if @user == current_user %>
    <p><%= link_to "プロフィール編集", edit_user_path %></p>
  <% end %>
</div>
<p>投稿一覧</p>
<% @posts.each do |post| %>
  <div>
    <%= post.title %>

    <% if post.images.attached? %>
        <%= image_tag post.images[0] %>
      <% else %>
        <%= image_tag "default-image.jpg" %>
    <% end %>

    <%= post.created_at.strftime('%Y/%m/%d') %>

    <%= link_to "詳細", post_path(post.id) %>

    <%= link_to "#{post.comments.count}コメント", post_path(post.id) %>

    <p><%= post.favorites.count %> ♡ </p>

  </div>
<% end %>

<p>いいねした投稿</p>
<%= render "favorite", favorites: @favorites %>