<div class="card-list-container py-5">
  <% favorites.each do |post| %>
  <div class="card w-50 mx-auto mt-4 shadow-lg">
    <%= link_to post_path(post.id) do %>
      <% if post.images.attached? %>
      <%# 先頭の画像だけを表示する %>
        <%= image_tag post.images[0], class:"card-img-top"; %>
      <% else %>
        <%# 画像が無い場合に代わりの画像を挿入する %>
        <%= image_tag "default-image.jpg" %>
      <% end %>
    <% end %>
    <div class="card-body">
      <div class="row">
        <div class="col-2">
          <%= image_tag post.user.get_profile_image(100,100), class:"mt-3 rounded-circle"; %>
        </div>
        <div class="col-10">
          <p class="card-title">
            <%= link_to(post_path(post.id), class:"text-dark") do %>
              <strong><i class="far fa-flag"></i><span> <%= post.title %></span></strong>
            <% end %>
          </p>
          <p class"card-text">投稿日: <%= post.created_at.strftime('%Y/%m/%d') %></p>
            <span><i class="fas fa-user"></i>  By
            <%= link_to(user_path(post.user.id)) do %>
              <%= post.user.nickname %>
            <% end %></span>
          <span> | </span>
          <span><%= link_to "#{post.comments.count} コメント", post_path(post.id), class:"text-dark" %> | </span>
          <span><%= post.favorites.count %> いいね </span>
        </div>
      </div>
    </div>
  </div>
  <% end %>
  <%#= paginate post_images %>
</div>