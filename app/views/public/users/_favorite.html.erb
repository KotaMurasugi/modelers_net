<% favorites.each do |post| %>
  <div>
    <%= post.title %>

    <% if post.images.attached? %>

        <%= image_tag post.images[0] %>

    <% else %>
      <%= image_tag "default-image.jpg" %>
    <% end %>

    <%= image_tag post.user.get_profile_image(100,100) %>

    <%= link_to user_path(post.user.id) do %>
      <%= post.user.nickname %>
    <% end %>

    <%= post.created_at.strftime('%Y/%m/%d') %>

    <%= link_to "詳細", post_path(post.id) %>

    <%= link_to "#{post.comments.count}コメント", post_path(post.id) %>

    <p><%= post.favorites.count %> ♡ </p>
  </div>
<% end %>